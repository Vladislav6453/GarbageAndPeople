<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:GarbageAndPeople.VM"
             x:Class="GarbageAndPeople.View.EditOwner"
             Title="EditOwner"
             BindingContext="{DynamicResource vm}">
    <ContentPage.Resources>
        <vm:EditOwnerVM x:Key="vm"/>
    </ContentPage.Resources>
    <VerticalStackLayout>
        <Label Text="Имя"/>
        <Entry Text="{Binding Owner.FirstName}"/>
        <Label Text="Фамилия"/>
        <Entry Text="{Binding Owner.LastName}"/>
        <Label Text="E-mail"/>
        <Entry Text="{Binding Owner.Email}"/>
        <Label Text="Номер телефона"/>
        <Entry Text="{Binding Owner.PhoneNumber}"/>

        <Button Text="Создать" Command="{Binding Redacting}"/>
    </VerticalStackLayout>
</ContentPage>