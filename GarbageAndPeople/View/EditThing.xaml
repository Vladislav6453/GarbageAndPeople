<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:GarbageAndPeople.VM"
             x:Class="GarbageAndPeople.View.EditThing"
             Title="EditThing"
             BindingContext="{DynamicResource vm}">
    <ContentPage.Resources>
        <vm:EditThingVM x:Key="vm"/>
    </ContentPage.Resources>
    <VerticalStackLayout>
        <Label Text="Название вещи:"/>
        <Entry Text="{Binding Thing.Title}"/>
        <Label Text="Владелец"/>
        <Picker ItemsSource="{Binding Owners}" SelectedItem="{Binding Thing.Owner}" Title="Выбри владельца" ItemDisplayBinding="{Binding Thing.Owner.FL}"/>
    </VerticalStackLayout>
</ContentPage>